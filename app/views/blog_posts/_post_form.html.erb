<%= form_with(model: blog_post) do |form| %>

  <%= render 'show_errors', blog_post: blog_post %>

   <% if blog_post.user_id %> 
    <% user = User.find(blog_post.user_id) %>
    <%= hidden_field_tag 'user_name', user.user_name %>
   <% end %> 
   
   <%= hidden_field_tag 'org_post_img', blog_post.img %>

  <div class="field">
    <%= form.hidden_field :user_id %>
  </div>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :post %>
    <%= form.text_area :post %>
  </div>

  <div class="field">
    <%= form.label "Banner" %>
    <%= form.hidden_field :img %>

    <div id="post_current_img" class="editable">
        <%= render 'post_banner_img', blog_post: blog_post %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>

<% end %>

<script src="https://widget.cloudinary.com/v2.0/global/all.js" type="text/javascript"></script>
<%= javascript_pack_tag 'blogPostUploadWidget' %>
